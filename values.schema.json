{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "agent": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "description": "Mode of agent to install"
        },
        "token": {
          "type": [
            "string",
            "null"
          ],
          "description": "The agent authentication token"
        },
        "externalTokenSecret": {
          "type": "object",
          "properties": {
            "name": {
              "type": [
                "string",
                "null"
              ],
              "description": "The name of an existing secret that contains the token"
            },
            "key": {
              "type": [
                "string",
                "null"
              ],
              "description": "The key in the secret that contains the token"
            }
          }
        }
      }
    }
  }
}
