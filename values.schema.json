{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "agent": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["Sensor", "AutoScaler"],
          "description": "Mode of agent to install"
        },
        "installStrategy": {
          "type": "string",
          "enum": ["DaemonSet", "DaemonSetWithHostInstall"],
          "description": "Method to install and run the agent"
        },
        "token": {
          "type": "string",
          "minLength": 1,
          "description": "The agent authentication token"
        }
      },
      "required": ["mode", "installStrategy", "token"]
    }
  },
  "required": ["agent"]
}
