{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "agent": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "description": "Mode of agent to install"
        },
        "token": {
          "type": [
            "string",
            "null"
          ],
          "description": "The agent authentication token"
        },
        "tokenSecret": {
          "type": "object",
          "properties": {
            "remoteKey": {
              "type": [
                "string",
                "null"
              ],
              "description": "The name of the key in the external secret store"
            }
          }
        }
      }
    }
  }
}
